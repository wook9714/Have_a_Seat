<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="107dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/pay_state"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"
        android:textSize="10dp"
        android:text="결제 상태"
     />

    <ImageView
        android:id="@+id/shop_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/pay_state"
        app:layout_constraintLeft_toLeftOf="@id/pay_state"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="매장 이름"
        app:layout_constraintLeft_toRightOf="@id/shop_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40.5dp"
        android:layout_marginLeft="20dp"
        android:textSize="12dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/order_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주문에대한 간략한 설명입니다."
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/shop_name"
        app:layout_constraintLeft_toLeftOf="@id/shop_name"
        android:layout_marginTop="8dp"
        />
    <TextView
        android:id="@+id/order_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1,000원"
        android:textSize="10dp"
        app:layout_constraintTop_toTopOf="@id/order_description"
        app:layout_constraintLeft_toRightOf="@id/order_description"
        android:layout_marginLeft="5dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>